@model mahjop.Models.Medication

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Medication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedicationId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DosageFrequency" class="control-label"></label>
                <input asp-for="DosageFrequency" class="form-control" />
                <span asp-validation-for="DosageFrequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicationCategoryId" class="control-label"></label>
                <select asp-for="MedicationCategoryId" class="form-control" asp-items="ViewBag.MedicationCategoryId"></select>
                <span asp-validation-for="MedicationCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <input asp-for="PatientId"  class="form-control"readonly></input>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Medications" asp-route-id="@Model.PatientId">Back</a>
</div>

