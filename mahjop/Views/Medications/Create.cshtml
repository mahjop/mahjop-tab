@model mahjop.Models.Medication

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Medication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-patientId="@ViewData["PatientId"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DosageFrequency" class="control-label"></label>
                <input asp-for="DosageFrequency" class="form-control" />
                <span asp-validation-for="DosageFrequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicationCategoryId" class="control-label"></label>
                <select asp-for="MedicationCategoryId" class ="form-control" asp-items="ViewBag.MedicationCategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <input asp-for="PatientId" class="form-control" readonly="readonly" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Medication" asp-route-id="PatientId">Back</a>
</div>

