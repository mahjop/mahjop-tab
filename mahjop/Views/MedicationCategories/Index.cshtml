@model IEnumerable<mahjop.Models.MedicationCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@item.MedicationCategoryId">Edit</a> |
                    <a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.MedicationCategoryId">Details</a> |
                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.MedicationCategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
