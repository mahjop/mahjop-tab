@model IEnumerable<mahjop.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Department</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-outline-info">Create New Department</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentPicture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.DepartmentPicture != null && item.DepartmentPicture.Length > 0)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(item.DepartmentPicture)" alt="Department Image" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.DepartmentId">Edit</a>
                    <a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.DepartmentId">Details</a>
                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.DepartmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
