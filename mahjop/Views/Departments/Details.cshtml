@model mahjop.Models.Department

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentPicture)
        </dt>
        <dd class="col-sm-10">
            @if (Model.DepartmentPicture != null && Model.DepartmentPicture.Length > 0)
            {
                <img  class="rounded-circle avatar" src="data:image;base64,@Convert.ToBase64String(Model.DepartmentPicture)" alt="Department Image" />
            }
            else
            {
                <img class="rounded-circle avatar" src="data:image;base64,@Convert.ToBase64String(Model.DepartmentPicture)" alt="Department Image" />

            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@Model.DepartmentId">Edit</a> |
    <a asp-action="Index" class="btn btn-outline-danger">Back to List</a>
</div>
